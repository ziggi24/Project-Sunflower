<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;1,300&family=Playfair+Display:ital,wght@0,500;0,600;0,700;1,500;1,600&display=swap"
    rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.min.css">
  <script src="/semantic/dist/semantic.min.js"></script>
  <script src='/scripts/app.js' defer></script>
  <link rel="stylesheet" href="/styles/profile.css">
  <title>Sunflower</title>
</head>

<body>
  <%- include('../templates/header') %>
  <h1><%=user.username%>'s Log</h1>
<div class="ui container">
  <div class="ui cards column">
    <% log.forEach(entry => { %>
    <div class="card">
      <div class="header">
        <h3><a href="/profile/<%=user.username%>/mood/<%=entry._id%>"><%=entry.dateAdded.toDateString()%></a></h3>
      </div>
      <div class="content">
        <p>Mood: <%=entry.mood%></p>
        <p>Outlook: <%=entry.outlook%></p>
        <p>Feeling: <%=entry.frequentEmotion%></p>
        <p>Notes: <%=entry.notes%></p>
      </div>
    </div>
    <hr>
    <br>
    <% }) %>
  </div>
</div>
  
</body>

</html>